@model firstsample.Models.guest_response

@{
    ViewBag.Title = "RSVPForm";
}

<h2>RSVPForm</h2>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>RsvpForm</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="jumbotron">
        <div class="container">
            @using (Html.BeginForm())
            {
                <p>Name: @Html.TextBoxFor(guest_response => guest_response.Name)</p>
                <p>Phone number: @Html.TextBoxFor(guest_response => guest_response.Phone)</p>
                <p>Email Addres: @Html.TextBoxFor(guest_response => guest_response.Email)</p>
                <p>
                    Are you gonna make it? @Html.DropDownListFor(guest_response => guest_response.WillAttend, new[] {
                                     new SelectListItem()
                                     { Text = "yes",Value = bool.TrueString},
                                     new SelectListItem()
                                     {Text = "nope", Value = bool.FalseString}
                                      },"make your choice")
                </p>
                <input type="submit" value="Submit RSVP" />
            }
        </div>
    </div>
</body>